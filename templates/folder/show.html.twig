                            <form class="delete-folder-form" data-id="${id}" style="display:inline;">
                                <input type="hidden" name="_token" value="${csrfToken}">
                                <button type="submit" class="dropdown-item delete-folder" data-id="${id}">Delete</button>
                            </form>
                            <a class="dropdown-item move-folder" data-id="${id}" href="#">Move</a>
                        </div>
                    </div>`;
            }
        
            function renderFolders(folders, container) {
                folders.forEach(folder => {
                    let folderItem = $(`
                        <li class="nav-item">
                            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse-${folder.id}" aria-expanded="false" aria-controls="collapse-${folder.id}">
                                <i class="fas fa-fw fa-folder"></i>
                                <span class="folder-arrow"><i class="fas fa-caret-right"></i></span>
                                <span class="folder-link" data-id="${folder.id}">${folder.name}</span>
                            </a>
                            <div class="folder-options">
                                ${createDropdownMenu(folder.id, folder.csrf_token)}
                            </div>
                            <div id="collapse-${folder.id}" class="collapse" aria-labelledby="heading-${folder.id}" data-parent="#folder-list">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <h6 class="collapse-header">${folder.name} Subfolders:</h6>
                                    <ul id="subfolders-${folder.id}" class="folder-list"></ul>
                                </div>
                            </div>
                        </li>
                    `);
                    container.append(folderItem);
                    renderSubfolders(folder.subfolders, $(`#subfolders-${folder.id}`));
                });
            }
        
            function renderSubfolders(subfolders, container) {
                subfolders.forEach(subfolder => {
                    let subfolderItem = $(`
                        <li class="nav-item subfolder-options">
                            <i class="fas fa-fw fa-folder"></i>
                            <span class="folder-link" data-id="${subfolder.id}">${subfolder.name}</span>
                            ${createDropdownMenu(subfolder.id, subfolder.csrf_token)}
                        </li>
                    `);
                    container.append(subfolderItem);
                    renderSubfolders(subfolder.subfolders, container);
                });
            }
        
            function loadFolders() {
                ajaxRequest('{{ path('get_folders') }}', 'GET', null, data => {
                    let folderList = $('#folder-list');
                    folderList.empty();
                    renderFolders(data, folderList);
                });
            }
        
            $(document).ready(function () {
                loadFolders();
        
                $('#create-folder').on('click', function () {
                    $('#create-folder-modal').show();
                });
        
                $('#create-folder-confirm').on('click', function () {
                    let folderName = $('#new-folder-name').val();
                    let parentFolderId = $('#parent-folder-select').val();
                    ajaxRequest('{{ path('folder_new') }}', 'POST', JSON.stringify({ name: folderName, parent_id: parentFolderId || null }), () => {
                        $('#create-folder-modal').hide();
                        loadFolders();
                    });
                });
        
                $('#create-folder-cancel').on('click', function () {
                    $('#create-folder-modal').hide();
                });
        
                $('#folder-list').on('click', '.folder-link', function () {
                    let folderId = $(this).data('id');
                    window.location.href = '{{ path('folder_view', {'id': 'FOLDER_ID'}) }}'.replace('FOLDER_ID', folderId);
                });
        
                $('#folder-list').on('click', '.edit-folder', function () {
                    let folderId = $(this).data('id');
                    $('#edit-folder-id').val(folderId);
                    let folderName = $(this).closest('.nav-item').find('.folder-link').first().text();
                    $('#edit-folder-name').val(folderName);
                    $('#editModal').show();
                });
        
                $('#edit-folder-form').on('submit', function (e) {
                    e.preventDefault();
                    let folderId = $('#edit-folder-id').val();
                    let folderName = $('#edit-folder-name').val();
                    ajaxRequest('{{ path('folder_edit', {'id': 'FOLDER_ID'}) }}'.replace('FOLDER_ID', folderId), 'POST', JSON.stringify({ name: folderName }), () => {
                        loadFolders();
                        $('#editModal').hide();
                    });
                });
        
                $('#folder-list').on('click', '.delete-folder', function () {
                    let folderId = $(this).data('id');
                    let csrfToken = $(this).siblings('.delete-folder-form').find('input[name="_token"]').val();
                    $('#delete-folder-id').val(folderId);
                    $('#delete-csrf-token').val(csrfToken);
                    $('#deleteModal').show();
                });
        
                $('#delete-folder-form').on('submit', function (e) {
                    e.preventDefault();
                    let folderId = $('#delete-folder-id').val();
                    let csrfToken = $('#delete-csrf-token').val();
                    let forceDelete = $('#force-delete').is(':checked');
                    ajaxRequest('{{ path('folder_delete', {'id': 'FOLDER_ID'}) }}'.replace('FOLDER_ID', folderId), 'POST', { _token: csrfToken, force: forceDelete }, response => {
                        if (response.success) {
                            loadFolders();
                        } else {
                            alert(response.message || 'Failed to delete folder.');
                        }
                        $('#deleteModal').hide();
                    });
                });
        
                $('#folder-list').on('click', '.move-folder', function () {
                    let folderId = $(this).data('id');
                    $('#move-folder-id').val(folderId);
                    ajaxRequest('{{ path('get_folders_for_move') }}', 'GET', null, data => {
                        let folderOptions = data.map(folder => `<option value="${folder.id}">${folder.name}</option>`).join('');
                        folderOptions = '<option value="">Root</option>' + folderOptions;
                        $('#target-folder').html(folderOptions);
                        $('#moveModal').show();
                    });
                });
        
                $('#move-folder-form').on('submit', function (e) {
                    e.preventDefault();
                    let folderId = $('#move-folder-id').val();
                    let targetFolderId = $('#target-folder').val();
                    ajaxRequest('{{ path('folder_move', {'id': 'FOLDER_ID'}) }}'.replace('FOLDER_ID', folderId), 'POST', JSON.stringify({ folder: targetFolderId || null }), response => {
                        if (response.success) {
                            loadFolders();
                        } else {
                            alert('Failed to move folder.');
                        }
                        $('#moveModal').hide();
                    });
                });
        
                $('#folder-list').on('click', '.nav-link', function (event) {
                    event.preventDefault();
                    let target = $(this).data('target');
                    $(target).collapse('toggle');
                    $(this).find('.folder-arrow i').toggleClass('fa-caret-right fa-caret-down');
                });
        
                $(document).on('click', '.move-link', function (event) {
                    event.preventDefault();
                    var moveForm = $(this).parent().find('.move-form');
                    moveForm.toggle();
                });
        
                $(document).on('click', '.preview-link', function (event) {
                    event.preventDefault();
                    var documentId = $(this).data('id');
                    var iframe = $('#previewIframe');
                    iframe.attr('src', '{{ path('document_preview', {'id': 'DOCUMENT_ID_PLACEHOLDER'}) }}'.replace('DOCUMENT_ID_PLACEHOLDER', documentId));
                    $('#previewModal').show();
                });
        
                $('.close').on('click', function () {
                    $(this).closest('.modal').hide();
                });
        
                $(window).on('click', function (event) {
                    if ($(event.target).hasClass('modal')) {
                        $('.modal').hide();
                    }
                });
        
                $('#show-upload-form').on('click', function (event) {
                    event.preventDefault();
                    let uploadFormContainer = $('#upload-form-container');
                    if (uploadFormContainer.is(':hidden')) {
                        uploadFormContainer.show();
                        $(this).text('Fermer');
                    } else {
                        uploadFormContainer.hide();
                        $(this).html('<i class="fas fa-plus fa-sm text-white-50"></i> Add Document');
                    }
                });
            });
        </script>
        
</body>

</html>

{% endblock %}